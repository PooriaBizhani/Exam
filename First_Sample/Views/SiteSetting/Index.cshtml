@using First_Sample.Domain.ViewModels.SiteSetting
@model List<SiteSettingVM>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<h1>Index</h1>
<div class="btn-group mt-4 mb-4">
    <a asp-action="RoleValidationGuid" class="btn btn-primary">RoleValidationGuid></a>
    </div>
@if(!Model.Any())
{
    <h2>No Settings Found</h2>
}
else
{
    for (int i = 0; i < Model.Count; i++)
    {
        <div class="card mt-2">
            <div class="card-header">
                SiteSetting Key : <b>@Model[i].Key</b>
            </div>
            <div class="card-header">
                SiteSetting Key : <b>@Model[i].Value</b>
            </div>
            <div class="card-header">
                SiteSetting Key : <b>@Model[i].LastTimeChenged</b>
            </div>
        </div>
    }
}